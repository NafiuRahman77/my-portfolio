<aside class="sidebar" data-sidebar>
    <div class="sidebar-info">
      <figure class="avatar-box">
        <img src=<%=user.image%> alt="Md Nafiu Rahman" width="80">
      </figure>

      <div class="info-content">
        <h1 class="name" title=<%=user.name%>> <%=user.name%> </h1>
        <!-- <p class="title">
          Software Engineer, Chaldal
          <br>
          2023 - Present
        </p> -->
        
      </div>

      <button class="info_more-btn" data-sidebar-btn>
        <span>Show Contacts</span>
        <ion-icon name="chevron-down"></ion-icon>
      </button>
    </div>
      <ul class="social-list">
        <% if(user.linkedin) { %>
            <li class="social-item">
                <a href=<%=user.linkedin%> class="social-link" target="_blank" rel="noopener noreferrer">
                  <ion-icon name="logo-linkedin"></ion-icon>
                </a>
              </li>
        <% } %>

        <% if(user.github) { %>
            <li class="social-item">
                <a href=<%=user.github%> class="social-link" target="_blank" rel="noopener noreferrer">
                  <ion-icon name="logo-github"></ion-icon>
                </a>
              </li>
        <% } %>

     
      </ul>
    </div>

    <div class="separator"></div>
    <div class="sidebar-info_more">
      <ul class="contacts-list">

        <% if(user.email) { %>
            <li class="contact-item">
                <div class="icon-box">
                  <ion-icon name="mail-outline"></ion-icon>
                </div>
                <div class="contact-info">
                  <p class="contact-title">Email</p>
                  <a href="mailto:<%=user.email%>" class="contact-link"><%=user.email%></a>
                </div>
              </li>
        <% } %>
        <% if(user.phone) { %>
            <li class="contact-item">
                <div class="icon-box">
                  <ion-icon name="phone-portrait-outline"></ion-icon>
                </div>
                <div class="contact-info">
                  <p class="contact-title">Phone</p>
                  <a href="tel:<%=user.phone%>" class="contact-link"><%=user.phone%></a>
                </div>
              </li>
        <% } %>

        <% if(user.location) {%>
            <li class="contact-item">
                <div class="icon-box">
                  <ion-icon name="location-outline"></ion-icon>
                </div>
                <div class="contact-info">
                  <p class="contact-title">Location</p>
                  <address><%=user.location%></address>
                </div>
              </li>
        <% } %>

        <% if(user.cv) { %>
          <li class="contact-item">
              <div class="icon-box">
                <ion-icon name="document-outline"></ion-icon>
              </div>
              <div class="contact-info">
                <a href="<%= user.cv %>" class="contact-link" download>Download Resume</a>
              </div>
          </li>
      <% } %>
      
      </ul>
  </aside>